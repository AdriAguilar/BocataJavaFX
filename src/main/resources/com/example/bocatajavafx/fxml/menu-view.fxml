<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bocatajavafx.controllers.MenuController" spacing="10" alignment="CENTER" prefWidth="800" prefHeight="600">
    <stylesheets>
        <URL value="@css/menu.css"/>
    </stylesheets>
    <Label text="Menú de Bocadillos" />
    <TableView fx:id="menuTable" prefHeight="500" prefWidth="780">
        <columns>
            <TableColumn fx:id="cnombre" text="Nombre" prefWidth="200"/>
            <TableColumn fx:id="ctipo" text="Tipo" prefWidth="50"/>
            <TableColumn fx:id="cdia" text="Día" prefWidth="50"/>
            <TableColumn fx:id="cmenu" text="Menú" prefWidth="30"/>
            <TableColumn fx:id="ccoste" text="Coste (€)" prefWidth="30"/>
        </columns>
    </TableView>
</VBox>